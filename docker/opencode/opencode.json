{
    "$schema": "https://opencode.ai/config.json",
    "theme": "system",
    "share": "disabled",
    "disabled_providers": [
        "zen",
        "opencode"
    ],
    "instructions": [],
    "mcp": {
        "mcp-gateway": {
            "type": "remote",
            "url": "http://host.docker.internal:8000/mcp",
            "enabled": true
        },
        "playwright": {
            "type": "local",
            "command": ["npx", "@playwright/mcp@latest", "--isolated", "--browser=chrome"],
            "enabled": true
        }
    },
    "permission": {
        "*": "allow"
    }
}
